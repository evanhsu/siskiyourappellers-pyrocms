<div id="posts" class="container">
	
	<div class="row">
		<h2>Updates</h2>
	</div>
	<div class="row">
	    {% set posts = entries('posts').recent().take(15).get() %}

	    {# include "anomaly.module.posts::posts/partials/posts" with {"posts": posts} #}

	    {# posts.links|raw #}

	    {% for post in posts %}
	    	<div class="post">
	    		<span class="post-marker"></span>
		    	<div class="post-title">{{ post.title }}</div>
		    	<div class="post-date"> - {{ carbon(post.created_at).diffForHumans() }}</div>
		    	<div class="post-body">
		    		{{ post.content | raw }}
	    		</div>
    		</div>
    		
	    {% endfor %}

    </div>
</div>
